{
  "name": "Web Summary AI",
  "description": "AI-powered web page summarization with custom prompts. Private and secure - no data collection.",
  "default_locale": "en",
  "version": "2.1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/logo-16.png",
    "32": "icons/logo-32.png",
    "48": "icons/logo-48.png",
    "128": "icons/logo-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "background": {
    "service_worker": "background/index.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/logo-16.png",
      "32": "icons/logo-32.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    },
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script/index.js"],
      "run_at": "document_idle",
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "popup/index.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "options_ui": {
    "page": "internal/chrome/gemini/options.html",
    "open_in_tab": true
  }
}
